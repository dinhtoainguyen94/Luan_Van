@model PagedList.IPagedList<Model.EF.SanPham>
@using PagedList.Mvc;

@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Tất Cả Sản Phẩm</h3>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in Model)
        {
            var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID_SP;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img src="@item.Image" alt="@item.Name" /></a>
                <h2>@item.Name </h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên Hệ")</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="them-gio-hang?productId=@item.ID_SP&quantity=1">Thêm Vào Giỏ</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }

    </div>
    @Html.PagedListPager(Model, page => Url.Action("SeeAllProduct", new { page }))
</div>

